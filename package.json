{
  "name": "ates",
  "version": "0.0.1",
  "description": "",
  "engines": {
    "node": ">=18.15.0",
    "npm": ">=9.5.0"
  },
  "author": "",
  "license": "MIT",
  "scripts": {
    "eslint-prettier-check-conflict": "eslint --print-config src/main.ts | eslint-config-prettier-check",
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/apps/task-tracker/main",
    "lint": "eslint --cache --ext .js,.ts src",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "db:auth": "knex --migrations-directory ./apps/auth/migrations",
    "db:task-tracker": "knex --migrations-directory ./apps/task-tracker/migrations",
    "db:accounting": "knex --migrations-directory ./apps/accounting/migrations"
  },
  "dependencies": {
    "@nestjs/common": "10.1.2",
    "@nestjs/config": "3.0.0",
    "@nestjs/core": "10.1.2",
    "@nestjs/microservices": "10.1.2",
    "@nestjs/passport": "10.0.0",
    "@nestjs/platform-express": "10.1.2",
    "@nestjs/serve-static": "4.0.0",
    "ajv": "8.12.0",
    "dotenv": "16.3.1",
    "kafkajs": "2.2.4",
    "knex": "2.5.1",
    "nest-oauth2-server": "1.1.3",
    "oauth2-server": "3.1.1",
    "passport": "0.6.0",
    "passport-oauth2": "1.7.0",
    "pg": "8.11.1",
    "reflect-metadata": "0.1.13",
    "rimraf": "5.0.0",
    "rxjs": "7.8.1"
  },
  "devDependencies": {
    "@nestjs/cli": "10.1.10",
    "@nestjs/schematics": "10.0.1",
    "@nestjs/testing": "10.1.2",
    "@types/express": "4.17.17",
    "@types/jest": "29.5.3",
    "@types/mock-knex": "0.4.5",
    "@types/node": "20.4.5",
    "@types/oauth2-server": "3.0.13",
    "@types/passport-local": "1.0.33",
    "@types/passport-oauth2": "1.4.12",
    "@types/supertest": "^2.0.8",
    "@typescript-eslint/eslint-plugin": "6.2.0",
    "@typescript-eslint/parser": "6.2.0",
    "eslint": "8.45.0",
    "eslint-config-airbnb-typescript": "17.1.0",
    "eslint-config-prettier": "8.8.0",
    "eslint-plugin-import": "2.27.5",
    "eslint-plugin-prettier": "5.0.0",
    "eslint-plugin-sonarjs": "0.19.0",
    "husky": "8.0.3",
    "jest": "29.6.1",
    "lint-staged": "13.2.3",
    "mock-knex": "0.4.12",
    "prettier": "3.0.0",
    "supertest": "6.3.3",
    "ts-jest": "29.1.1",
    "ts-loader": "9.4.4",
    "ts-node": "10.9.1",
    "tsconfig-paths": "4.2.0",
    "typescript": "5.1.6"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/",
      "<rootDir>/libs/"
    ],
    "moduleNameMapper": {
      "^common(|/.*)$": "<rootDir>/libs/common/src/$1",
      "^schema-registry|/.*)$": "<rootDir>/libs/schema-registry/src/$1"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint",
      "jest --bail --findRelatedTests"
    ]
  }
}
